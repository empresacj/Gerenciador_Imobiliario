{$R *.dfm}

procedure TfrmMovimentacaoCidades.cdsMovimentacaoAfterDelete(DataSet: TDataSet);
begin
  inherited;
  cdsMovimentacao.ApplyUpdates(0);
end;

procedure TfrmMovimentacaoCidades.FormClose(Sender: TObject;
